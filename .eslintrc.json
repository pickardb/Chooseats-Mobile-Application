{
    "parser": "babel-eslint",

    "extends": [
		"eslint:recommended",
    "plugin:react/recommended"
    ],

     "settings": {
    "react": {
      "createClass": "createReactClass", 
                                        
      "pragma": "React",  
      "version": "15.0", 
      "flowVersion": "0.53" 
    },
    "propWrapperFunctions": [ "forbidExtraProps" ] 
    },

    "rules": {
      "no-unused-vars": 0,
      "no-console": 0,
      "no-debugger": 0,
      "react/prop-types": 0,
      "no-undef" : 0,
      "react/no-string-refs" : 0
    },
  
    "plugins": ["react", "react-native"],
  
    "env": {
		"react-native/react-native": true,
		"browser": true
    }
}
